<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/azkar_image1"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/azkar"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        />
    <TextView
        android:id ="@+id/zekr_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/azkar_image1"
        android:text="أذكار الصباح"
        android:fontFamily="@font/bukraregular"
        app:layout_constraintTop_toTopOf="@id/azkar_image1"
        app:layout_constraintBottom_toBottomOf="@id/azkar_image1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="@dimen/_10sdp"

        />
    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@id/azkar_image1"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"


        />


</androidx.constraintlayout.widget.ConstraintLayout>
